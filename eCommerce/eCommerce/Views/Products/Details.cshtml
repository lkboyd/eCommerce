@model eCommerce.Models.Product
@*dont forget to declare the view's model on the first line!*@
@{
    ViewBag.Title = Model.Name;
}
<script type="text/javascript" src="~/Scripts/thumbnail.js"></script>
<div class="row">
    <div class="col-md-8 product-details">
        <h2>@Model.Name</h2>
        <p>
            @Model.Description
        </p>
        <p>
            MSRP: <s>$@Math.Round(Model.MSRP, 2) </s>
            <br/>
            Our Price: <span class="price">
            $@Math.Round(Model.UnitPrice, 2)
            </span>
            
            @if (Model.UnitPrice < Model.MSRP) { 
                <div>You save <span class="price">@Math.Round((Model.UnitPrice / Model.MSRP)*100, 2) %</span></div>
            }
        </p>
    </div>
    <div class="col-md-4 product-images">
        <img id="mainImage" class="img-rounded main-image" src="@Model.ProductImages.First().imageURL" />
        <div class="thumbnails text-center">
            @foreach (var image in Model.ProductImages) 
            { 
                <div class="thumbnail">
                    <img class="thumbPic" src="@image.imageURL" />
                </div>
            }
        </div>
    </div>
</div>
<div>
    @*link to go back to the main products list*@
    <a href="@Url.Action("Index", "Products")" class="btn btn-default">Back to Products</a>
    <script>
        init();
    </script>
</div>

